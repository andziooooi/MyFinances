@{
    ViewData["Title"] = "Podsumowanie";
}

<h2 class="text-center">Podsumowanie Finansowe</h2>

<div class="card p-3 my-3">
    <h4>Łączne zarobki: <span class="text-success fw-bold">2000 zł</span></h4>
    <h4>Łączne wydatki: <span class="text-danger fw-bold">1200 zł</span></h4>
    <h4>
        Bilans: <span class="fw-bold @(2000 - 1200 >= 0 ? "text-success" : "text-danger")">
            @(2000 - 1200) zł
        </span>
    </h4>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Data</th>
            <th>Opis</th>
            <th>Kwota</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>05-02-2024</td>
            <td>Wynagrodzenie</td>
            <td class="text-success">+1500 zł</td>
        </tr>
        <tr>
            <td>06-02-2024</td>
            <td>Zakupy</td>
            <td class="text-danger">-300 zł</td>
        </tr>
    </tbody>
</table>
